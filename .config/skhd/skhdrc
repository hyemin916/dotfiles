# App shortcuts
ctrl + cmd - a: open -a 'Arc'
ctrl + cmd - o : open -a 'Obsidian'
ctrl + cmd - c: open -a 'Calendar'
ctrl + cmd - d: open -a 'DataGrip'
ctrl + cmd - f: open -a 'Finder'
ctrl + cmd - g: open -a 'Google Chrome'
ctrl + cmd - h: open -a 'Things3'
ctrl + cmd - i: open -a 'IntelliJ IDEA Ultimate'
ctrl + cmd - k: open -a 'KakaoTalk'
ctrl + cmd - m : open -a 'Mail'
ctrl + cmd - s : open -a 'Slack'
ctrl + cmd - t : open -a 'Microsoft Teams'
ctrl + cmd - w : open -a 'WezTerm'
ctrl + cmd - x : open -a 'Xmind'

# focus window
# shift + alt - h : yabai -m window --focus west
# shift + alt - j : yabai -m window --focus south
# shift + alt - k : yabai -m window --focus north
# shift + alt - l : yabai -m window --focus east

# toggle window zoom
# shift + alt - g : yabai -m window --toggle windowed-fullscreen
# shift + alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
# shift + alt - e : yabai -m window --toggle split
