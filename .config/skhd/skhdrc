# Left command + Opt + hjkl을 화살표 키로 매핑
lcmd + lalt - h : skhd -k "left"
lcmd + lalt - j : skhd -k "down"  
lcmd + lalt - k : skhd -k "up"
lcmd + lalt - l : skhd -k "right"

# App shortcuts
lalt - a: open -a 'Arc'
lalt - b: open -a 'Things3'
lalt - c: open -a 'Calendar'
lalt - d: open -a 'DataGrip'
lalt - f: open -a 'Finder'
lalt - g: open -a 'Google Chrome'
lalt - i: open -a 'IntelliJ IDEA Ultimate'
lalt - l : open -a 'Flow'
lalt - m : open -a 'Mail'
lalt - o : open -a 'Obsidian'
lalt - s : open -a 'Slack'
lalt - t : open -a 'Microsoft Teams'
lalt - v : open -a 'Cursor'
lalt - w : open -a 'WezTerm'
lalt - x : open -a 'Xmind'
lalt - y : open -a 'KakaoTalk'
lalt - z : open -a 'Flow'
